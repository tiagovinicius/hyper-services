{
  "name": "Platform as Service + Service Mesh (Dokku, Kuma)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "hype-services",
  "workspaceFolder": "/workspace",
  // Configure tool-specific properties.
  "containerEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "customizations": {
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "dbaeumer.vscode-eslint",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot-workspace"
      ],
      "settings": {
        "files.autoSave": "afterDelay",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [22, 80, 443, 5681, 5678, 8000, 8001],
  // Use 'mounts' to mount the source code into the container.
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated"
  ],
  // Starts control-plane, set up kmctl in devcontainer
  "postCreateCommand": "bash modules/kuma/control-plane-deployment/entrypoint.sh && bash modules/kuma/dataplane-deployment/build-image.sh &&  bash apps/hyperservice/install.sh"
}
