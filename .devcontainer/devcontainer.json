{
  "name": "Hyper Service Platform (Dokku, Kuma, Kong, Services exemples)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "hype-services",
  "workspaceFolder": "/workspace",
  // Configure tool-specific properties.
  "containerEnv": {
    "NODE_ENV": "production",
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "customizations": {
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "dbaeumer.vscode-eslint",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot-workspace"
      ],
      "settings": {
        "files.autoSave": "afterDelay",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [22, 80, 443, 5681, 5678, 8000, 8001],
  // Use 'mounts' to mount the source code into the container.
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  // Starts control-plane, set up kmctl in devcontainer and load env vars in /etc/environment
  "postCreateCommand": "bash modules/kuma/control-plane-deployment/entrypoint.sh && bash modules/kuma/data-plane-deployment/build-image.sh &&  bash install.sh",
  "postAttachCommand": "[ -f /etc/environment ] && (echo 'Loading /etc/environment...' && set -a && . /etc/environment && set +a && exec bash) || echo '/etc/environment not found'"
}
